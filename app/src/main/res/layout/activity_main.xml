<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitePrincipale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/TotalCalcul"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Calcul"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:textSize="34sp" />

        <LinearLayout
            android:id="@+id/FifthLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_back"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="BACK" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="C" />

            <Button
                android:id="@+id/button_puissance"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="x^y" />

            <Button
                android:id="@+id/button_division"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="รท" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/FourthLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_seven"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="7" />

            <Button
                android:id="@+id/button_height"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="8" />

            <Button
                android:id="@+id/button_nine"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="9" />

            <Button
                android:id="@+id/button_multiplication"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="X" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ThirdLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_four"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="4" />

            <Button
                android:id="@+id/button_five"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="5" />

            <Button
                android:id="@+id/button_six"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="6" />

            <Button
                android:id="@+id/button_substract"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SecondLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_one"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="1" />

            <Button
                android:id="@+id/button_two"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="2" />

            <Button
                android:id="@+id/button_three"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="3" />

            <Button
                android:id="@+id/button_plus"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/FirstLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_zero"
                android:layout_width="207dp"
                android:layout_height="100dp"
                android:text="0" />

            <Button
                android:id="@+id/button_dot"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="," />

            <Button
                android:id="@+id/button_equal"
                android:layout_width="102.75dp"
                android:layout_height="100dp"
                android:text="=" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>